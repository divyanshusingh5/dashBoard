# Application Settings
APP_NAME=Claims Analytics Dashboard
APP_VERSION=2.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database Selection
# Set to 'sqlite' or 'snowflake'
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
SQLITE_DB_PATH=./app/db/claims_analytics.db
SQLITE_POOL_SIZE=20
SQLITE_MAX_OVERFLOW=40

# Snowflake Configuration (used when DATABASE_TYPE=snowflake)
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=CLAIMS_DB
SNOWFLAKE_SCHEMA=ANALYTICS
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_ROLE=ANALYST
SNOWFLAKE_POOL_SIZE=5
SNOWFLAKE_MAX_OVERFLOW=10

# Performance Settings
CACHE_ENABLED=True
CACHE_TTL=300
MATERIALIZED_VIEWS_ENABLED=True

# Pagination Defaults
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=10000
